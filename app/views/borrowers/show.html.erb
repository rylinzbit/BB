<a href="/session/logout" class="logout">Logout</a>
<div>
	<p><span class"l_and_b_page">Name: </span><%= @user.first_name %> <%= @user.last_name %></p>
	<p><span class"l_and_b_page">Amount Need: </span>$<%= @user.money %></p>
	<p><span class"l_and_b_page">Amount Raised: </span>$<%= @user.raised %></p>
</div>
<h4>List of people who lend you money:</h4>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Amount Lent</th>
		</tr>
	</thead>
	<tbody>
		<% if @lenders %>
			<% @lenders.each do |lend| %>
				<tr>
					<td><%= lend.first_name %> <%= lend.last_name %></td>
					<td><%= lend.email %></td>
					<td>$<%= lend.amount %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>